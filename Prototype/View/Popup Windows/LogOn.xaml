<Window x:Class="Prototype.View.Popup_Windows.LogOn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Please Log On" Height="142" Width="357" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="ID:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="234" Margin="96,14,0,0" Name="textBoxUser" TabIndex="0"/>
        <PasswordBox HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="234" Margin="96,45,0,0" Name="textBoxPassword" TabIndex="1"/>
        <Button Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="255,72,0,0" Click="Button_Click" TabIndex="2"/>

    </Grid>
</Window>
